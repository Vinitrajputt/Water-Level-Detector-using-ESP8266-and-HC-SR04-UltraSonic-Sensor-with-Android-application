<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <corners android:radius="10dp" />
            <solid android:color="#FFFFFF" /> <!-- Checked background color -->
<!--            <stroke android:width="1dp" android:color="#DDDDDD" /> &lt;!&ndash; Border for checked state &ndash;&gt;-->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="10dp" />
            <solid android:color="#F0F0F0" /> <!-- Unchecked background color -->
<!--            <stroke android:width="1dp" android:color="#DDDDDD" /> &lt;!&ndash; Border for unchecked state &ndash;&gt;-->
        </shape>
    </item>
</selector>
